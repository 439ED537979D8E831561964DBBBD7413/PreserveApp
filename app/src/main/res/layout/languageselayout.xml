<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_shape_white5"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/languagese_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Which language girls do you like most"
        style="@style/black_15_sp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/languagese_rv"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        tools:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/languagese_tv"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="44dp"
        style="@style/white_16_style"
        android:text="@string/confirm"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_shpe_pinkbtn"/>
</LinearLayout>